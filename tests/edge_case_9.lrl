;; Edge case: nested Nat matching without recursion.

(def is_three (pi n Nat Bool)
  (lam n Nat
    (match n Bool
      (case (zero) false)
      (case (succ n1)
        (match n1 Bool
          (case (zero) false)
          (case (succ n2)
            (match n2 Bool
              (case (zero) false)
              (case (succ n3)
                (match n3 Bool
                  (case (zero) true)
                  (case (succ n4) false)
                )
              )
            )
          )
        )
      )
    )
  )
)

(is_three (succ (succ (succ zero))))
